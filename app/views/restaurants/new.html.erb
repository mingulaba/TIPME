                  <div>
                      <%= f.input :address, label: false, input_html: { class: "form-style", placeholder: "Adress ..." } %>
                  </div>
                  <div>
                      <%= f.input :category, label: false, input_html: { class: "form-style", placeholder: "Category ..." } %>
                  </div>
                  <div>
                      <%= f.input :phone_number, label: false, input_html: { class: "form-style", placeholder: "Phone number ..." } %>
                  </div>
                  <br>
                  <div class="form-actions">
                      <%= f.submit "Create", class: "btn" %>
